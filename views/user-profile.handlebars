<div class="container row">
    <div class="col s6 user-profile">
        <div class="row">
            <h2 value="{{user.id}} "  id="user-name">{{user.first_name}} {{user.last_name}}</h2>
        </div>

        <div class="row">
            <h3>Subject</h3>
            <br>
            <p>{{user.subject}}</p>
        </div>

        <div class="row">
            <h3>Description</h3>
            <br>
            <p>{{user.description}}</p>
        </div>
    </div>

    <div class="col s6">
        {{#if userLoggedIn}}
            <div class="row">
                <form class="comments-form">
                    <div class="row">
                        <textarea id="review" placeholder="Write your Post"></textarea>
                    </div>

                    <div>
                        <button type="submit" class="btn">Submit</button>
                    </div>
                </form>
            </div>
        {{/if}}

        <div class="row">
            <h2>Comments:</h2>
        </div>

        {{#each user.comment as |comment|}}
            <div class="row">
                <div>
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{comment.user.first_name}} {{comment.user.last_name}}</span>
                            <p>{{comment.comment}}</p>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script src="/javascript/write-comment.js"></script>